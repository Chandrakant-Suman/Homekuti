<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Edit your Listing</h1>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <input type="text" name="listing[title]" value="<%= listing.title %>" required>
        <textarea name="listing[description]" required><%= listing.description %></textarea>
        <input type="text" name="listing[image]" value="<%= listing.image %>">
        <input type="number" name="listing[price]" value="<%= listing.price %>" required>
        <input type="text" name="listing[location]" value="<%= listing.location %>" required>
        <input type="text" name="listing[country]" value="<%= listing.country %>" required>

        <button type="submit">Edit Listing</button>
    </form>


    <footer class="footer">
        <div class="footer-content">
            <div class="footer-brand">
                <img src="/images/logo.jpg" alt="Homkuti Logo" class="footer-logo">
                <span class="footer-title">Homkuti</span>
            </div>

            <div class="footer-links">
                <a href="/">Home</a>
                <a href="/listings">Listings</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
            </div>

            <div class="footer-social">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
        </div>

        <p class="footer-copy">© <%= new Date().getFullYear() %> Homekuti — All Rights Reserved.</p>
    </footer>
</body>
