<% layout('/layouts/boilerplate') -%>
<!-- Hero Section -->
<section class="hk-hero">
  <div class="hk-hero-content">
    <p class="hk-hero-kicker">Curated homestays • Cozy cottages • Mountain escapes</p>
    <h1 class="hk-hero-title">Find a stay that actually feels like home.</h1>
    <p class="hk-hero-subtitle">
      Discover handpicked homes, cabins, and rooms hosted by people who care.
      No generic hotel vibe, just warm, lived-in spaces.
    </p>

    <div class="hk-hero-actions">
      <a href="/listings" class="btn hk-btn-primary">Explore all stays</a>
      <a href="/listings/new" class="btn hk-btn-ghost">Become a host</a>
    </div>
  </div>

  <div class="hk-hero-side d-none d-md-block">
    <div class="hk-hero-card">
      <h3>Weekend idea</h3>
      <p>3 nights in a hillside homestay, chai on the balcony, no Slack notifications.</p>
      <span class="hk-hero-tag">From ₹1,499/night</span>
    </div>
  </div>
</section>

<!-- Search Pill (Airbnb-style) -->
<section class="hk-search-wrapper">
  <div class="hk-search-pill">
    <div class="hk-search-item">
      <span class="hk-search-label">Where</span>
      <span class="hk-search-value">Search destinations</span>
    </div>
    <div class="hk-search-divider"></div>
    <div class="hk-search-item">
      <span class="hk-search-label">When</span>
      <span class="hk-search-value">Add dates</span>
    </div>
    <div class="hk-search-divider"></div>
    <div class="hk-search-item">
      <span class="hk-search-label">Who</span>
      <span class="hk-search-value">Add guests</span>
    </div>
    <div class="hk-search-end">
        <p class="hero-mini-tagline">Where every stay feels like home.</p>
        <button class="hk-search-btn">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
    </div>

    
  </div>
</section>
<!-- Featured Listings -->
<section class="hk-section">
  <div class="hk-section-header">
    <h2>Featured stays</h2>
    <a href="/listings">View all</a>
  </div>

  <div class="row g-4">
  <% if (featuredListings && featuredListings.length) { %>
    <% featuredListings.forEach(function(listing) { %>
      <div class="col-md-4">
        <div class="hk-stay-card position-relative">
          <a href="/listings/<%= listing._id %>" class="stretched-link" aria-label="View <%= listing.title || 'listing' %>" style="z-index:2"></a>

          <div 
            class="hk-stay-image"
            style="background-image: url('<%= listing.image ? listing.image : "/images/placeholder.jpg" %>');"
            role="img"
            aria-label="<%= listing.title || 'Listing image' %>">
          </div>

          <div class="hk-stay-body">
            <p class="hk-stay-location"><%= listing.location ? listing.location : (listing.city || '') %></p>
            <p class="hk-stay-title"><%= listing.title || 'Untitled listing' %></p>

            <% if (listing.guests || listing.bedrooms || listing.amenities) { %>
              <p class="hk-stay-meta">
                <%= listing.guests ? listing.guests + ' guests' : '' %>
                <% if (listing.bedrooms) { %> · <%= listing.bedrooms %> bedrooms <% } %>
                <% if (listing.amenities && listing.amenities.length) { %> · <%= listing.amenities.slice(0,2).join(', ') %> <% } %>
              </p>
            <% } %>

            <p class="hk-stay-price">
              <span>&#8377; <%= (typeof listing.price === 'number') ? listing.price.toLocaleString('en-IN') : (listing.price || 'N/A') %></span> night
            </p>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-12">
      <p>No featured stays available right now. <a href="/listings">Browse listings</a>.</p>
    </div>
  <% } %>
</div>
</section>
<!-- End of Home Page -->