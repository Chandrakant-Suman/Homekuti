<% layout('/layouts/boilerplate') -%>
<h1>Contact us</h1>

<form action="/contact" method="POST">
  <div class="row g-3">
    <div class="col-md-6">
      <label for="name" class="form-label">Full name</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        class="form-control" 
        placeholder="Enter your name" 
        required
      >
    </div>

    <div class="col-md-6">
      <label for="email" class="form-label">Email address</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        class="form-control" 
        placeholder="you@example.com" 
        required
      >
    </div>
  </div>

  <div class="mt-3">
    <label for="subject" class="form-label">Subject</label>
    <input 
      type="text" 
      id="subject" 
      name="subject" 
      class="form-control" 
      placeholder="Booking query, partnership, feedback..."
      required
    >
  </div>

  <div class="mt-3">
    <label for="message" class="form-label">Message</label>
    <textarea 
      id="message" 
      name="message" 
      class="form-control" 
      placeholder="Tell us how we can help you" 
      rows="4"
      required
    ></textarea>
  </div>

  <button type="submit">Send message</button>

  <p style="margin-top:0.75rem; font-size:0.9rem; color:#6b7280;">
    You can also reach us at 
    <a href="mailto:support@homekuti.com">support@homekuti.com</a>. 
    We usually respond within 24–48 hours, unless we’re stuck on a mountain with bad network.
  </p>
</form>
